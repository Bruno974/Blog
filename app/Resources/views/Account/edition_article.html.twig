{% extends 'baseAdmin.html.twig' %}

{% block stylesheets_enfant %}
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=kk0rqsx4ustkjlm70ut883a5hetalz9s5uitpohirak9393x"></script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1>Edition d'un épisode:</h1>
            <br>

            <div class="row well">
                <div class="col-lg-12">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div >
                        <div class="form-group">
                            <label for="nom">Titre</label>
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}})}}
                            {{ form_errors(form.titre) }}
                        </div>
                        <div class="form-group">
                            <label for="contenu">Contenu</label>
                            {{ form_widget(form.contenu, {'attr': {'required': 'false'}})}}
                            {{ form_errors(form.contenu)}}
                        </div>
                        <a href="{{ path('admin') }}" class="btn btn-danger pull-right">Annuler</a>
                        <button type="submit" name="submitAction"  value="Publier"  class="btn btn-info">Publier</button>
                        <button type="submit" name="submitAction"  value="Depublier"  class="btn btn-info">Dépublier</button>
                        <button type="submit" name="submitAction"  value="Enregistrer" class="btn btn-warning">Enregistrer</button>
                    </div>

                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

        {% block js_enfant %}
            <script>
                tinymce.init({
                    selector: 'textarea',
                    height: 500,
                    menubar: false,
                    plugins: [
                        'advlist autolink lists link  charmap print preview anchor',
                        'searchreplace visualblocks code fullscreen',
                        'insertdatetime media table contextmenu paste code'
                    ],
                    toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
                    content_css: '//www.tinymce.com/css/codepen.min.css'
                });
            </script>
            <script>
                $(function(){
                    $('#appbundle_episode_contenu').removeAttr("required");
                    $('.control-label').hide();
                });
            </script>
        {% endblock %}

